<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="page_title" type="text_line">
            <meta>
                <title lang="en">Page title</title>
            </meta>
        </property>

        <property name="article" type="text_editor">
            <meta>
                <title lang="en">Article</title>
            </meta>
        </property>

        <property name="images_home" type="media_selection">
            <meta>
                <title lang="en">Home Gallery.</title>
            </meta>

            <params>
                <param name="types" value="image"/>
            </params>
        </property>

        <section name="special_block">
            <meta>
                <title lang="en">Special block</title>
            </meta>

            <properties>
                <property name="special_block_title" type="text_line" colspan="6">
                    <meta>
                        <title lang="en">Title</title>
                    </meta>
                </property>

                <property name="special_block_sale_title" type="text_line" colspan="6">
                    <meta>
                        <title lang="en">Sale title</title>
                    </meta>
                </property>

                <property name="special_block_article" type="text_editor" colspan="6">
                    <meta>
                        <title lang="en">Text</title>
                    </meta>
                </property>

                <property name="special_block_sale" type="text_editor" colspan="6">
                    <meta>
                        <title lang="en">Next sale</title>
                    </meta>
                </property>

                <property name="special_block_images" type="single_media_selection" colspan="3">
                    <meta>
                        <title lang="en">Image</title>
                    </meta>

                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>
            </properties>
        </section>

        <section name="home_tile_1">
            <meta>
                <title lang="en">Home page tile 1</title>
            </meta>

            <properties>
                <property name="home_tile_1_title" type="text_line" colspan="6">
                    <meta>
                        <title lang="en">Title</title>
                    </meta>
                </property>

                <property name="home_tile_1_images" type="single_media_selection" colspan="6">
                    <meta>
                        <title lang="en">Image</title>
                    </meta>

                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>

                <property name="home_tile_1_article" type="text_editor">
                    <meta>
                        <title lang="en">Text</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="home_tile_2">
            <meta>
                <title lang="en">Home page tile 2</title>
            </meta>

            <properties>
                <property name="home_tile_2_title" type="text_line" colspan="6">
                    <meta>
                        <title lang="en">Title</title>
                    </meta>
                </property>

                <property name="home_tile_2_images" type="single_media_selection" colspan="6">
                    <meta>
                        <title lang="en">Image</title>
                    </meta>

                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>

                <property name="home_tile_2_article" type="text_editor">
                    <meta>
                        <title lang="en">Text</title>
                    </meta>
                </property>
            </properties>
        </section>

    </properties>
</template>
